@model Shop.Models.RegisterViewModel
@{
    ViewBag.Title = "Đăng ký";
}
@Html.Partial("_Nofit")
<header class="py-5" style="background: linear-gradient(90deg, #007991 0%, #78ffd6 100%); max-width: 1200px; margin: 0 auto;">
    <div class="container px-1 px-lg-1 my-1">
        <div class="text-center text-white">
            <h1 class="display-4 fw-bolder" style="font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;">@ViewBag.Title</h1>
            <p class="lead fw-normal text-light" style="color: #FFFFFF; font-size: 1.2rem;">360 Store - Uy tín và chất lượng!</p>
        </div>
    </div>
</header>

<div class="container-fluid" style="max-width: 1200px; margin: auto;">
    <div class="row card-body">
        <div class="col-lg-4 col-md-6 col-sm-8 mx-auto bg-white py-4 mb-4">
            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <h4 class="m-3 text-center">Tạo tài khoản mới</h4>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group m-3">
                    @Html.Label("Email (*)", new { @class = "control-label" })
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                </div>

                <div class="form-group m-3">
                    @Html.Label("Mật khẩu (*)", new { @class = "control-label" })
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                </div>

                <div class="form-group m-3">
                    @Html.Label("Xác thực mật khẩu (*)", new { @class = "control-label" })
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                </div>

                <div class="form-group m-3">
                    @Html.Label("Họ tên (*)", new { @class = "control-label" })
                    @Html.TextBoxFor(m => m.hoten, new { @class = "form-control" })
                </div>

                <div class="form-group m-3">
                    @Html.Label("Địa chỉ", new { @class = "control-label" })
                    @Html.TextBoxFor(m => m.diachi, new { @class = "form-control" })
                </div>

                <div class="form-group m-3 text-center">
                    <input type="submit" class="btn btn-danger" value="Đăng ký" />
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
