@model PagedList.IPagedList<Shop.Models.Dienthoai>
@using PagedList.Mvc;
@using Shop.Common
@using Shop.Models

@{
    ViewBag.Title = "GetListAllDienthoai";
    Layout = "~/Views/Shared/_Layout.cshtml";
    HomeModel home = new HomeModel();
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css">

<style>
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f4f4f4;
    }

    header {
        background: linear-gradient(to right, #6e8efb, #764ba2);
        padding: 40px 0;
        color: white;
        text-align: center;
    }

    .container {
        max-width: 1200px;
        margin: auto;
        padding: 20px;
    }

    .card {
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        transition: transform .3s ease-in-out;
        border: none;
        overflow: hidden;
    }

        .card:hover {
            transform: scale(1.05);
            box-shadow: 0 8px 16px rgba(0,0,0,0.2);
        }

    .card-img-top {
        width: 100%;
        height: 200px;
        object-fit: cover;
        transition: transform .3s ease-in-out;
    }

    .card:hover .card-img-top {
        transform: scale(1.1);
    }

    .card-body {
        padding: 15px;
        background: white;
        text-align: center;
    }

    .card-footer {
        background: none;
        border-top: none;
    }

    .btn-outline-success {
        border-color: #28a745;
        color: #28a745;
    }

        .btn-outline-success:hover {
            background-color: #28a745;
            color: white;
        }

    .pagination {
        display: flex;
        list-style: none;
        justify-content: center;
    }

        .pagination li a {
            margin: 0 5px;
            padding: 8px 16px;
            background-color: #fff;
            border: 1px solid #ddd;
        }

            .pagination li a.active,
            .pagination li a:hover {
                background-color: #007bff;
                color: white;
                border-color: #007bff;
            }
</style>

<header>
    <h1>Danh sách điện thoại</h1>
    <p>Chọn một sản phẩm xem thử!</p>
</header>

<section class="py-5">
    <div class="container">
        <div class="row gx-4 gx-lg-5 justify-content-center">
            @foreach (var item in Model)
            {
                <div class="col-md-3 col-sm-6 mb-4">
                    <div class="card h-100">
                        <!-- Product image -->
                        <img class="card-img-top" src="@Url.Content("~/Data/images/" + item.hinh)" alt="Image of @item.tendienthoai">
                        <!-- Product details -->
                        <div class="card-body">
                            <h5 class="fw-bolder">@item.tendienthoai</h5>
                            @String.Format("{0:0,0} đ", item.giaban)
                        </div>
                        <!-- Product actions -->
                        <div class="card-footer">
                            <a class="btn btn-outline-success mt-auto" href="@Url.Action("Details", "Home", new { id = item.madienthoai })">Xem chi tiết</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<div class="container">
    <div class="pagination">
        @Html.PagedListPager(Model, page => Url.Action("GetListAllDienthoai", "Home", new { page }), PagedListRenderOptions.ClassicPlusFirstAndLast)
    </div>
</div>
