@model Shop.Models.QuangCao

<!-- Captcha -->
@using BotDetect.Web.Mvc
@using BotDetect.Web.UI
<link href="@BotDetect.Web.CaptchaUrls.Absolute.LayoutStyleSheetUrl" rel="stylesheet" type="text/css" />

@{
    MvcCaptcha quangcaoCaptcha = new MvcCaptcha("quangcaoCaptcha");
    quangcaoCaptcha.UserInputID = "CaptchaCodeAD";
}

@{
    ViewBag.Title = "QuangCao";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<header class="py-5" style="background: linear-gradient(70deg, rgba(33,212,255,1) 0%, rgba(156,9,121,1) 35%, rgba(0,212,255,1) 100%);">
    <div class="container px-1 px-lg-1 my-1">
        <div class="text-center text-white">
            <h1 class="display-4 fw-bolder">Liên hệ đặt quảng cáo</h1>
            <p class="lead fw-normal mb-0" style="color: #4cff00;">Khách hàng vui lòng liên hệ trước khi gửi thông tin quảng cáo! 💌💌💌</p>
            <a class="btn text-white" href="@Url.Action("Contact","Home")" style="background-color: #ea0bca; margin: 10px;">
                <i class="fa fa-mail-bulk"></i> Liên hệ trước
            </a>
        </div>
    </div>
</header>
<div class="container-fluid">
    <div class="row">
        <div class="col-lg-4 col-md-6 col-sm-8 mx-auto bg-light py-4 px-4 rounded shadow-lg" style="margin-top: 20px;">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <h3 class="text-center mb-4" style="font-weight: 700; color: #333;">Thông tin đặt quảng cáo</h3>

                <!-- Tên quảng cáo -->
                <div class="form-group mb-3">
                    @Html.Label("Tên quảng cáo", htmlAttributes: new { @class = "form-label fw-bold" })
                    @Html.EditorFor(model => model.tenqc, new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập tên quảng cáo" } })
                    @Html.ValidationMessageFor(model => model.tenqc, "", new { @class = "text-danger small" })
                </div>

                <!-- Tên công ty -->
                <div class="form-group mb-3">
                    @Html.Label("Tên công ty", htmlAttributes: new { @class = "form-label fw-bold" })
                    @Html.EditorFor(model => model.tencongty, new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập tên công ty" } })
                    @Html.ValidationMessageFor(model => model.tencongty, "", new { @class = "text-danger small" })
                </div>

                <!-- Hình nền -->
                <div class="form-group mb-3">
                    @Html.Label("Hình nền", htmlAttributes: new { @class = "form-label fw-bold" })
                    @Html.EditorFor(model => model.hinhnen, new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập URL hình nền" } })
                    @Html.ValidationMessageFor(model => model.hinhnen, "", new { @class = "text-danger small" })
                </div>

                <!-- Link -->
                <div class="form-group mb-3">
                    @Html.Label("Link", htmlAttributes: new { @class = "form-label fw-bold" })
                    @Html.EditorFor(model => model.link, new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập URL liên kết" } })
                    @Html.ValidationMessageFor(model => model.link, "", new { @class = "text-danger small" })
                </div>

                <!-- Ngày bắt đầu -->
                <div class="form-group mb-3">
                    @Html.Label("Ngày bắt đầu", htmlAttributes: new { @class = "form-label fw-bold" })
                    <input type="date" name="ngaybatdau" class="form-control" />
                </div>

                <!-- Ngày đến hạn -->
                <div class="form-group mb-3">
                    @Html.Label("Ngày đến hạn", htmlAttributes: new { @class = "form-label fw-bold" })
                    <input type="date" name="ngayhethan" class="form-control" />
                </div>

                <!-- Captcha -->
                <div class="form-group mb-3">
                    @Html.Label("Captcha", htmlAttributes: new { @class = "form-label fw-bold" })
                    <div>
                        @Html.Captcha(quangcaoCaptcha)
                        @Html.TextBox("CaptchaCodeAD", null, new { @class = "form-control mt-2", placeholder = "Nhập mã xác thực" })
                    </div>
                </div>

                <!-- Nút xác nhận -->
                <div class="text-center">
                    <input type="submit" value="✅ Xác nhận" class="btn btn-warning px-4 py-2" />
                </div>
            }
        </div>
    </div>

    <!-- Link về trang chủ -->
    <div class="row">
        <div class="col-lg-4 col-md-6 col-sm-8 mx-auto text-center mt-3">
            <a class="btn btn-success" href="@Url.Action("Index","Home")">
                <i class="fa fa-home"></i> Về trang chủ
            </a>
        </div>
    </div>
</div>
